<BODY>
    <?php
    echo  "<table border=1><br>";
    echo "<h3>Numeros Impares</h3>";
    echo "Indice";
    echo "Valor";
    echo "Suma";
    $valor=1;
    $numerosImpares = [];
    $contadorImpares = 0;
    $suma=0;
    do{
            echo "<tr>"; 
            if($valor % 2 !=0){
                echo "<td>&nbsp;" . $contadorImpares . "&nbsp;</td>";
                $suma=$valor+$suma;
                echo "<td>&nbsp" . $numerosImpares[] = $valor. "&nbsp;</td>";
                echo "<td>&nbsp" . $suma. "&nbsp;</td>";
                $contadorImpares++;
            }  
            $valor++;
            echo "</tr>";
            //colocamos al final el contador para que se incremente una vez ha pasado toda la impresi√≤n.
            //es necesario realizarlo de esta manera para que empiece de cero y no se incremente en la suma total
            //si lo incrementamos arriba, la primera suma daria 0+1=2    
    }while($contadorImpares<20);
    echo "</table>";
    var_dump($numerosImpares);//nos da informacion muy completa sobre la variable
